<?xml version="1.0"?>
<ruleset name="Sliim">
    <description>Sliim PHP Coding Standard</description>

    <exclude-pattern>*.css</exclude-pattern>
    <exclude-pattern>*.htm</exclude-pattern>
    <exclude-pattern>*.html</exclude-pattern>
    <exclude-pattern>*.js</exclude-pattern>

    <rule ref="PSR2" />

    <rule ref="Generic/Sniffs/Classes/">
        <exclude name="Generic.Classes.DuplicateClassName" />
    </rule>
    <rule ref="Generic/Sniffs/ControlStructures/" />
    <rule ref="Generic/Sniffs/Formatting/">
        <exclude name="Generic.Formatting.NoSpaceAfterCast" />
    </rule>
    <rule ref="Generic/Sniffs/NamingConventions/" />
    <rule ref="Generic/Sniffs/CodeAnalysis/" />
    <rule ref="Generic/Sniffs/WhiteSpace/" />

    <rule ref="PEAR/Sniffs/Classes/" />
    <rule ref="PEAR/Sniffs/Functions/">
        <exclude name="PEAR.Functions.FunctionDeclaration" />
    </rule>

    <rule ref="PEAR.Commenting.InlineComment" />
    <rule ref="PEAR.Commenting.FunctionComment" />
    <rule ref="PEAR.Files.IncludingFile" />
    <rule ref="PEAR.NamingConventions.ValidClassName" />
    <rule ref="PEAR.WhiteSpace.ObjectOperatorIndent" />
    <rule ref="PEAR.WhiteSpace.ScopeClosingBrace" />

    <rule ref="Squiz.Commenting.FunctionCommentThrowTag" />
    <rule ref="Squiz/Sniffs/Operators/">
        <exclude name="Squiz.Operators.ComparisonOperatorUsage" />
    </rule>
    <rule ref="Squiz/Sniffs/PHP/">
        <exclude name="Squiz.PHP.EmbeddedPhp" />
        <exclude name="Squiz.PHP.ForbiddenFunctions" />
        <exclude name="Squiz.PHP.DisallowMultipleAssignments" />
        <exclude name="Squiz.PHP.DisallowComparisonAssignment" />
        <exclude name="Squiz.PHP.DisallowInlineIf" />
        <exclude name="Squiz.PHP.CommentedOutCode" />
    </rule>
    <rule ref="Squiz/Sniffs/Functions/">
        <exclude name="Squiz.Functions.GlobalFunction" />
    </rule>
    <rule ref="Squiz/Sniffs/WhiteSpace/">
        <exclude name="Squiz.WhiteSpace.ObjectOperatorSpacing" />
        <exclude name="Squiz.WhiteSpace.FunctionSpacing" />
        <exclude name="Squiz.WhiteSpace.FunctionClosingBraceSpace" />
    </rule>
    <rule ref="Squiz/Sniffs/ControlStructures/">
        <exclude name="Squiz.ControlStructures.SwitchDeclaration" />
        <exclude name="Squiz.ControlStructures.ElseIfDeclaration" />
    </rule>

    <rule ref="Squiz.Classes.DuplicateProperty" />

    <rule ref="Zend.Debug.CodeAnalyzer" />

</ruleset>
